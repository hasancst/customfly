# Shopify Configuration
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SHOPIFY_APP_URL=https://your-domain.com
SCOPES=write_orders,write_products

# Server Configuration
PORT=3011
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name?schema=public

# Linode S3 Configuration
S3_ENDPOINT=https://us-southeast-1.linodeobjects.com
S3_REGION=us-southeast-1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_PUBLIC_URL=https://your-bucket.us-southeast-1.linodeobjects.com

# CDN Configuration (Optional)
ENABLE_CDN=false
CDN_URL=https://cdn.your-domain.com

# Google AI Studio Configuration
# Get API Key at: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-flash-latest

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting Configuration
# Comma-separated list of shops to whitelist from rate limiting
RATE_LIMIT_WHITELIST=test-shop.myshopify.com,dev-shop.myshopify.com

# Redis Configuration (Optional - for future caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Monitoring Configuration (Optional)
# SENTRY_DSN=your_sentry_dsn_here
