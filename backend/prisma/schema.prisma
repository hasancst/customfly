generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  accountOwner        Boolean   @default(false)
  collaborator        Boolean   @default(false)
  email               String?
  emailVerified       Boolean   @default(false)
  firstName           String?
  lastName            String?
  locale              String?
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model MerchantConfig {
  id                    String   @id @default(uuid())
  shop                  String
  shopifyProductId      String
  printArea             Json
  baseImage             String?
  masks                 Json?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  baseImageColor        String?
  baseImageColorEnabled Boolean? @default(false)
  baseImageProperties   Json?
  selectedColorAssetId  String?
  selectedBaseColorAssetId String?
  customPaperDimensions Json?
  paperSize             String?
  safeAreaOffset        Json?
  safeAreaPadding       Float?
  safeAreaShape         String?
  showRulers            Boolean? @default(false)
  showSafeArea          Boolean? @default(false)
  unit                  String?
  baseImageAsMask       Boolean? @default(false)
  safeAreaHeight        Float?
  safeAreaRadius        Float?   @default(0)
  safeAreaWidth         Float?
  variantBaseImages     Json?
  buttonStyle           Json?
  buttonText            String   @default("Design It")
  designerLayout        String   @default("redirect")
  enabledTools          Json?
  inlineSettings        Json?
  modalSettings         Json?
  wizardSettings        Json?
  outputSettings        Json?
  colorAssetId          String?
  fontAssetId           String?
  galleryAssetId        String?
  optionAssetId         String?
  shapeAssetId          String?

  @@unique([shop, shopifyProductId])
}

model SavedDesign {
  id                String   @id @default(uuid())
  shop              String
  designJson        Json
  previewUrl        String?
  status            String   @default("draft")
  shopifyOrderId    String?
  lineItemId        String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  shopifyProductId  String?
  name              String   @default("Untitled Design")
  isTemplate        Boolean  @default(false)
  customerEmail     String?
  customerId        String?
  productionFileUrl String?

  @@index([shop, shopifyProductId])
}

model Asset {
  id        String   @id @default(uuid())
  shop      String
  type      String
  name      String
  value     String
  config    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDefault Boolean  @default(false)
  label     String?

  @@index([shop, type])
  @@index([shop, type, isDefault])
}

model GoogleFont {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model ProductPricingConfig {
  id               String   @id @default(uuid())
  shop             String
  shopifyProductId String
  globalPricing    Json?
  textPricing      Json?
  imagePricing     Json?
  elementPricing   Json?
  bulkPricing      Json?
  printingMethods  Json?
  currency         String   @default("USD")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  pricingRules     Json?

  @@unique([shop, shopifyProductId])
}

model PromoCode {
  id             String   @id @default(uuid())
  shop           String
  code           String
  discountType   String
  discountValue  Float
  minOrderAmount Float?
  usageLimit     Int?
  usageCount     Int      @default(0)
  active         Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([shop, code])
  @@index([shop])
}

model DesignUpload {
  id        String   @id @default(uuid())
  shop      String
  productId String
  filename  String
  url       String
  size      Int
  createdAt DateTime @default(now())

  @@index([shop, productId])
}
