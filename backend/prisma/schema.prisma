generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  accountOwner        Boolean   @default(false)
  collaborator        Boolean   @default(false)
  email               String?
  emailVerified       Boolean   @default(false)
  firstName           String?
  lastName            String?
  locale              String?
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model MerchantConfig {
  id                    String   @id @default(uuid())
  shop                  String
  shopifyProductId      String
  printArea             Json
  baseImage             String?
  baseImageColor        String?
  baseImageProperties   Json?
  baseImageColorEnabled Boolean? @default(false)
  selectedColorAssetId  String?
  safeAreaPadding       Float?
  safeAreaShape         String?
  safeAreaOffset        Json?
  paperSize             String?
  customPaperDimensions Json?
  unit                  String?
  showRulers            Boolean? @default(false)
  showSafeArea          Boolean? @default(false)
  baseImageAsMask       Boolean? @default(false)
  safeAreaRadius        Float?   @default(0)
  safeAreaWidth         Float?
  safeAreaHeight        Float?
  variantBaseImages     Json?
  masks                 Json?
  
  // NEW: Layout Configuration
  designerLayout        String   @default("redirect") // "redirect" | "inline" | "modal" | "wizard"
  inlineSettings        Json?    // { position: "below-description", showPreview: true }
  modalSettings         Json?    // { width: "800px", height: "600px" }
  wizardSettings        Json?    // { steps: ["template", "text", "color"] }
  enabledTools          Json?    // { text: true, image: true, etc }
  buttonText            String   @default("Design It")
  buttonStyle           Json?    // { color: "#000", bgColor: "#fff" }

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@unique([shop, shopifyProductId])
}

model SavedDesign {
  id                String   @id @default(uuid())
  shop              String
  designJson        Json
  previewUrl        String?
  status            String   @default("draft")
  shopifyOrderId    String?
  lineItemId        String?
  customerId        String?
  customerEmail     String?
  productionFileUrl String?
  shopifyProductId  String?
  name              String   @default("Untitled Design")
  isTemplate        Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([shop, shopifyProductId])
}

model Asset {
  id        String   @id @default(uuid())
  shop      String
  type      String
  name      String
  value     String
  config    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([shop, type])
}

model GoogleFont {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model ProductPricingConfig {
  id               String   @id @default(uuid())
  shop             String
  shopifyProductId String
  
  globalPricing    Json?
  textPricing      Json?
  imagePricing     Json?
  elementPricing   Json?
  bulkPricing      Json?
  printingMethods  Json?
  pricingRules     Json?
  
  currency         String   @default("USD")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([shop, shopifyProductId])
}

model PromoCode {
  id              String   @id @default(uuid())
  shop            String
  code            String
  discountType    String   // 'percentage' | 'fixed_amount'
  discountValue   Float
  minOrderAmount  Float?
  usageLimit      Int?
  usageCount      Int      @default(0)
  active          Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([shop, code])
  @@index([shop])
}

model DesignUpload {
  id        String   @id @default(uuid())
  shop      String
  productId String
  filename  String
  url       String
  size      Int
  createdAt DateTime @default(now())
  
  @@index([shop, productId])
}
