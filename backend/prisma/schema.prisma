generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  accountOwner        Boolean   @default(false)
  collaborator        Boolean   @default(false)
  email               String?
  emailVerified       Boolean   @default(false)
  firstName           String?
  lastName            String?
  locale              String?
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model MerchantConfig {
  id                       String   @id @default(uuid())
  shop                     String
  shopifyProductId         String
  printArea                Json
  baseImage                String?
  masks                    Json?
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt
  baseImageColor           String?
  baseImageColorEnabled    Boolean? @default(false)
  baseImageProperties      Json?
  selectedColorAssetId     String?
  customPaperDimensions    Json?
  paperSize                String?
  safeAreaOffset           Json?
  safeAreaPadding          Float?
  safeAreaShape            String?
  showRulers               Boolean? @default(false)
  showSafeArea             Boolean? @default(false)
  unit                     String?
  baseImageAsMask          Boolean? @default(false)
  safeAreaHeight           Float?
  safeAreaRadius           Float?   @default(0)
  safeAreaWidth            Float?
  variantBaseImages        Json?
  buttonStyle              Json?
  buttonText               String   @default("Design It")
  designerLayout           String   @default("redirect")
  enabledTools             Json?
  inlineSettings           Json?
  modalSettings            Json?
  wizardSettings           Json?
  outputSettings           Json?
  colorAssetId             String?
  fontAssetId              String?
  galleryAssetId           String?
  optionAssetId            String?
  shapeAssetId             String?
  selectedBaseColorAssetId String?
  enabledDownload          Boolean? @default(true)
  enabledGrid              Boolean? @default(true)
  enabledReset             Boolean? @default(true)
  enabledUndoRedo          Boolean? @default(true)
  showGrid                 Boolean? @default(false)
  headerTitle              String   @default("Product Customizer")
  baseImageColorMode       String?  @default("transparent")
  baseImageMaskInvert      Boolean? @default(false)
  baseImageScale           Float?
  baseImageLocked          Boolean? @default(true)
  variantBaseScales        Json?
  showLayersInDirect       Boolean? @default(true)
  showLayersInModal        Boolean? @default(true)

  @@unique([shop, shopifyProductId])
}

model SavedDesign {
  id                String   @id @default(uuid())
  shop              String
  designJson        Json
  previewUrl        String?
  status            String   @default("draft")
  shopifyOrderId    String?
  lineItemId        String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  shopifyProductId  String?
  name              String   @default("Untitled Design")
  isTemplate        Boolean  @default(false)
  customerEmail     String?
  customerId        String?
  productionFileUrl String?

  @@index([shop, shopifyProductId])
}

model Asset {
  id        String   @id @default(uuid())
  shop      String
  type      String
  name      String
  value     String
  config    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDefault Boolean  @default(false)
  label     String?

  @@index([shop, type])
  @@index([shop, type, isDefault])
}

model GoogleFont {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model ProductPricingConfig {
  id               String   @id @default(uuid())
  shop             String
  shopifyProductId String
  globalPricing    Json?
  textPricing      Json?
  imagePricing     Json?
  elementPricing   Json?
  bulkPricing      Json?
  printingMethods  Json?
  currency         String   @default("USD")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  pricingRules     Json?

  @@unique([shop, shopifyProductId])
}

model PromoCode {
  id             String   @id @default(uuid())
  shop           String
  code           String
  discountType   String
  discountValue  Float
  minOrderAmount Float?
  usageLimit     Int?
  usageCount     Int      @default(0)
  active         Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([shop, code])
  @@index([shop])
}

model DesignUpload {
  id        String   @id @default(uuid())
  shop      String
  productId String
  filename  String
  url       String
  size      Int
  createdAt DateTime @default(now())

  @@index([shop, productId])
}

model AISession {
  id        String     @id @default(uuid())
  shop      String
  userId    String?
  startedAt DateTime   @default(now())
  endedAt   DateTime?
  status    String     @default("active")
  context   Json?
  actions   AIAction[]

  @@index([shop])
  @@index([startedAt])
}

model AIAction {
  id         String    @id @default(uuid())
  sessionId  String
  shop       String
  actionType String
  target     String
  targetId   String?
  input      Json?
  output     Json?
  changes    Json?
  status     String    @default("pending")
  approvedBy String?
  approvedAt DateTime?
  executedAt DateTime?
  createdAt  DateTime  @default(now())
  session    AISession @relation(fields: [sessionId], references: [id])

  @@index([shop])
  @@index([sessionId])
  @@index([status])
  @@index([createdAt])
}

model AIRecommendation {
  id          String   @id @default(uuid())
  shop        String
  category    String
  priority    String   @default("medium")
  title       String
  description String
  reasoning   String?
  actionable  Boolean  @default(true)
  actions     Json?
  status      String   @default("new")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([shop])
  @@index([status])
  @@index([priority])
}

model AIShopProfile {
  id              String   @id @default(uuid())
  shop            String   @unique
  industry        String?
  stylePreference String?  // e.g., "minimalist", "bold", "classic"
  learnedPatterns Json?    // e.g., common canvas sizes used, preferred colors
  lastAnalyzedAt  DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([shop])
}

model AIFeedback {
  id         String   @id @default(uuid())
  shop       String
  sessionId  String?
  actionId   String?
  rating     Int      // 1 to 5, or thumb up/down represented as 1/-1
  comment    String?
  createdAt  DateTime @default(now())

  @@index([shop])
}

model DesignTemplate {
  id                    String   @id @default(uuid())
  shop                  String
  name                  String
  description           String?
  
  // Canvas Settings
  paperSize             String   @default("Custom")
  unit                  String   @default("px")
  customPaperDimensions Json?    // {width, height}
  
  // Design Data
  pages                 Json     // Same structure as SavedDesign.designJson
  
  // Metadata
  thumbnail             String?  // Preview image URL
  tags                  String[] @default([])
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([shop])
  @@index([shop, name])
  @@index([shop, createdAt])
}

model PrintfulConnection {
  id          String   @id @default(uuid())
  shop        String   @unique
  accessToken String
  storeId     String?
  connected   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([shop])
}

model PrintfulProduct {
  id                String   @id @default(uuid())
  shop              String
  printfulProductId String
  printfulVariantId String?
  shopifyProductId  String?
  status            String   @default("synced")
  printArea         Json?
  mockupUrls        Json?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([shop, printfulProductId])
  @@index([shop])
  @@index([shopifyProductId])
}

model PrintfulCatalog {
  id          Int      @id @default(autoincrement())
  productId   Int      @unique // Printful product ID
  name        String
  type        String?
  brand       String?
  model       String?
  image       String?
  description String?
  catalogData Json     // Full product data from Printful
  syncedAt    DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([syncedAt])
}

model PrintfulOrder {
  id              String   @id @default(uuid())
  shop            String
  shopifyOrderId  String
  printfulOrderId String?
  status          String   @default("pending")
  orderData       Json?
  errorMessage    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([shop, shopifyOrderId])
  @@index([shop])
  @@index([printfulOrderId])
  @@index([status])
}
